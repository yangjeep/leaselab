{
  "name": "leaselab",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "dev:site": "npm run dev --workspace=@leaselab/site",
    "dev:ops": "npm run dev --workspace=@leaselab/ops",
    "dev": "npm-run-all --parallel dev:site dev:ops",
    "build": "npm-run-all build:site build:ops",
    "build:site": "npm run build --workspace=@leaselab/site",
    "build:ops": "npm run build --workspace=@leaselab/ops",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^1.6.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1",
    "wrangler": "^4.56.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "esbuild": "^0.27.0",
    "valibot": "^1.2.0",
    "estree-util-value-to-estree": "^1.3.0",
    "vite-node": "^3.2.4"
  },
  "dependencies": {
    "unenv": "^1.10.0"
  }
}
