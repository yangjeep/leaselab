{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "baseUrl": ".",
    "types": [
      "@remix-run/cloudflare",
      "vite/client",
      "@cloudflare/workers-types"
    ],
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "noEmit": true,
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "@/*": [
        "./app/*"
      ],
      "~/shared/types": [
        "../../shared/types"
      ],
      "~/shared/utils": [
        "../../shared/utils"
      ],
      "~/shared/config": [
        "../../shared/config"
      ],
      "@leaselab/ui-components": [
        "../../shared/ui-components/src"
      ],
      "@leaselab/ui-components/*": [
        "../../shared/ui-components/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".cache"
  ]
}
