{
  "name": "@leaselab/ops",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "start": "wrangler pages dev ./build/client",
    "deploy": "wrangler pages deploy ./build/client",
    "typecheck": "tsc --noEmit",
    "db:migrate": "wrangler d1 execute leaselab-db --local --file=./migrations/0001_init.sql && wrangler d1 execute leaselab-db --local --file=./migrations/0002_property_units.sql",
    "db:migrate:prod": "wrangler d1 execute leaselab-db --file=./migrations/0001_init.sql && wrangler d1 execute leaselab-db --file=./migrations/0002_property_units.sql"
  },
  "dependencies": {
    "@leaselab/shared-types": "*",
    "@leaselab/shared-utils": "*",
    "@leaselab/shared-config": "*",
    "@leaselab/storage-core": "*",
    "@leaselab/storage-cloudflare": "*",
    "@remix-run/cloudflare": "^2.15.0",
    "@remix-run/cloudflare-pages": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "isbot": "^5.1.17",
    "openai": "^4.70.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@remix-run/dev": "^2.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.3.3",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.3",
    "wrangler": "^3.87.0"
  }
}
