{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@remix-run/cloudflare", "vite/client", "@cloudflare/workers-types"],
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "~/shared/types": ["../../shared/types"],
      "~/shared/utils": ["../../shared/utils"],
      "~/shared/config": ["../../shared/config"],
      "~/shared/storage-core": ["../../shared/storage-core"],
      "~/shared/storage-cloudflare": ["../../shared/storage-cloudflare"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mjs",
    "env.d.ts"
  ],
  "exclude": ["node_modules", "build", ".cache"]
}
