# ===========================================
# LeaseLab.io - Combined Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# Both apps will read from this single env file

# ===========================================
# SHARED - Cloudflare Resources
# ===========================================

# Cloudflare Account
CF_ACCOUNT_ID=

# D1 Database (shared by both apps)
D1_DATABASE_ID=
D1_API_TOKEN=

# KV Namespace (for sessions - ops only)
KV_NAMESPACE_ID=

# R2 Bucket (for file storage - ops only)
R2_BUCKET_NAME=leaselab-files
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# ===========================================
# SITE APP (apps/site)
# ===========================================

# Ops API URL (where site sends leads)
OPS_API_URL=http://localhost:8788

# Google Maps
GOOGLE_MAPS_API_KEY=

# ===========================================
# OPS APP (apps/ops)
# ===========================================

# OpenAI API Key (required for AI tenant evaluation)
OPENAI_API_KEY=

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=

# ===========================================
# PLACEHOLDER INTEGRATIONS (Optional)
# ===========================================

# DocuSign (for lease signing)
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_USER_ID=
DOCUSIGN_ACCOUNT_ID=

# Screening APIs
CERTN_API_KEY=
SINGLEKEY_API_KEY=

# ===========================================
# ENVIRONMENT
# ===========================================
ENVIRONMENT=development
