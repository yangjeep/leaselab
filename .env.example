# ===========================================
# Rental Management Platform - Environment Variables
# ===========================================
# Copy this file to .env.local in both apps/site and apps/ops
# and fill in the values for your environment.

# ===========================================
# STOREFRONT (apps/site)
# ===========================================

# Cloudflare D1 Database
D1_ACCOUNT_ID=
D1_DATABASE_ID=
D1_API_TOKEN=

# Baserow (existing lead storage - optional)
BASEROW_TENANT_WR_TOKEN=

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Ops API URL
OPS_API_URL=http://localhost:8788

# ===========================================
# OPS BACKEND (apps/ops)
# ===========================================

# OpenAI API Key (required for AI evaluation)
OPENAI_API_KEY=

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=

# Cloudflare Account
CF_ACCOUNT_ID=

# D1 Database
D1_DATABASE_ID=

# KV Namespace (for sessions)
KV_NAMESPACE_ID=

# R2 Bucket (for file storage)
R2_BUCKET_NAME=rental-files
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# DocuSign (placeholder - optional)
DOCUSIGN_INTEGRATION_KEY=
DOCUSIGN_USER_ID=
DOCUSIGN_ACCOUNT_ID=

# Screening APIs (placeholder - optional)
CERTN_API_KEY=
SINGLEKEY_API_KEY=

# ===========================================
# DEVELOPMENT
# ===========================================
ENVIRONMENT=development
